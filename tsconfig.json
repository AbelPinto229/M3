{
  "compilerOptions": {
    "rootDir": "./src",            // pasta de origem
    "outDir": "./dist",            // pasta de saída compilada
    "module": "nodenext",          // módulos ES para Node moderno
    "moduleResolution": "nodenext",
    "target": "es2022",            // JS moderno
    "strict": true,                // ativa todas as verificações estritas
    "esModuleInterop": true,       // compatibilidade com import/export CommonJS
    "forceConsistentCasingInFileNames": true, // evita problemas de maiúsculas/minúsculas
    "skipLibCheck": true,          // ignora checagem de libs
    "declaration": true,           // gera .d.ts
    "sourceMap": true              // gera .map para debug
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
